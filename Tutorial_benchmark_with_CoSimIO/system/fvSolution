// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver           GAMG;
        tolerance        1e-6;
        relTol           1e-5;
        //nCellsInCoarsestLevel 252; //square root of ur ncells
        //relTol           1e-2;
        smoother         DICGaussSeidel;
    }
/*
    p
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-8;
        relTol          1.0e-3;;
    }
*/
    pFinal
    {
        $p;
        tolerance       1e-07;
        relTol          0;
    }

    pcorr
    {
        solver           GAMG;
        tolerance        1e-5;
        relTol           1e-4;
        smoother         GaussSeidel;
    }

    pcorrFinal
    {
        $pcorr;
        relTol          0;
    }

    Phi
    {
        $p;
    }

    "(U|cellDisplacement)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-6;
        relTol          1e-4;
        minIter         2;
    }

    "(U|cellDisplacement)Final"
    {
        $U;
        relTol          0;
    }
}

PIMPLE
{

    consistent          true;

    //Outer loops (Pressure-Momentum Corrections)
    nOuterCorrectors    100;

    //Innner loops (Pressure corrections)
    nCorrectors         2;

    /*
    residualControl
    {
        p
        {
            relTol      0;
            tolerance   5e-5;
        }

        U
        {
            relTol      0;
            tolerance   1e-4;
        }
    }
    */
    residualControl
    {
        U 1e-5;
        p 1e-5;
    }

    //relTol              0;
    //tolerance           1.0e-12;
    //pisoTol 1e-6;

    nNonOrthogonalCorrectors 2;
    correctPhi          yes;

}

//Keep this to ensure matrix diagonal eqaulity
relaxationFactors
{
    fields
    {
        p       0.4;
        pFinal  0.4;
    }
    equations
    {
        U       0.6;
        UFinal  0.6;
    }
}

