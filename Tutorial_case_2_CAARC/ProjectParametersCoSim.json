        "parallel_type" : "MPI"
    },
    "solver_settings" :
    {
        "type" : "coupled_solvers.gauss_seidel_weak",
        "echo_level" : 1,
        "predictors" : [
            {
                "type" : "average_value_based",
                "solver"         : "Openfoam_Kratos_Wrapper",
                "data_name"      : "load_interface_3D_structure_ordered"
