        "coupling_operations" : {
            "scaling_loads_interface_3D_structure" : {
                "type"           : "scaling",
                "solver"         : "structure",
                "data_name"      : "load_interface_3D_structure",
                "scaling_factor" : "(sin(((t)/0.01)/1000*pi/2))**2 ",
                "echo_level"     : 1,
                "interval"       : [0.0, 10.0]
            }
        },
        "solvers" :
        {
            "Openfoam_Kratos_Wrapper":
            {
                "type" : "solver_wrappers.external.openfoam_wrapper",
