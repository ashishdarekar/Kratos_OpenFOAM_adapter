                "data_name"      : "load_cells_interface_3D_structure",
                "echo_level"     : 1
            } *//* ,
            "coupling_output_1" : {
                "type"          : "coupling_output",
                "solver"        : "Openfoam_Kratos_Wrapper",
                "execution_point" : "finalize_solution_step",
                "output_parameters" :  {
                    "model_part_name"                             : "interface_3D_structure",
                    "output_control_type"                         : "step",
                    "output_interval"                             : 1,
                    "output_sub_model_parts"                      : false,
                    "output_path"                                 : "vtk_output_coupling",
                    "save_output_files_in_folder"                 : true,
                    "nodal_solution_step_data_variables"          : ["REACTION"],
                    "element_data_value_variables"                : ["REACTION"]
                }
            } */
